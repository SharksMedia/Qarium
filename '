declare(strict_types=1);

namespace Sharksmedia\Objection;

class ModelQueryBuilderBase extends ModelQueryBuilderOperationSupport
{

    public function modify(...$args)
    {
        $func = $args[0] ?? null;

        if($func === null) return $this;

        $args[0] = $this;

        $func(...$args);

        reutrn $this;

    }

}
